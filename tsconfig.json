{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/lib/*": [
                "lib/*"
            ],
            "@/utils/*": [
                "utils/*"
            ],
            "@/config/*": [
                "config/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
            "@/assets/*": [
                "assets/*"
            ],
            "@/components/*": [
                "components/*"
            ],
            "@/domain/*": [
                "domain/*"
            ],
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}